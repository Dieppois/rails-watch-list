<div class="container d-flex gap-2 flex-wrap my-5">

  <% @lists.each do |list| %>
    <div class="card w-100">
      <div class="card-body d-flex justify-content-between  align-items-center">
        <h5 class="card-title"><%= link_to list.name, list_path(list), class: "text-decoration-none text-dark fs-1" %></h5>
          <div class="align-content-center d-flex flex-row w-30 flex-wrap">
          <%= link_to "Add a review", new_list_bookmark_path(list), class:"btn btn-primary w-100 px-5" %>
          <%= link_to 'Delete', list_path(list), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-primary w-100 px-5" %>
          </div>
      </div>
    </div>
  <% end %>

</div>
