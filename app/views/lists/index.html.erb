<div class="banner" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= cl_image_path("cld-sample-2")%>")'>
  <div class="container">
    <h1 class="text-center">Welcome to my movies list</h1>
  </div>
</div>

<div class="container d-flex gap-2 grow-1 flex-wrap my-5">
  <% @lists.each do |list| %>
    <div class="card w-100">
      <div class="card-body d-flex justify-content-between">
        <h5 class="card-title"><%= link_to list.name, list_path(list), class: "text-decoration-none text-dark fs-1" %></h5>
          <div>
          <%= link_to "Add a review", new_list_bookmark_path(list), class:"btn btn-primary w-100 align-self-center" %>
          </div>
      </div>
    </div>
  <% end %>
</div>
